<?xml version="1.0" encoding="UTF-8"?>
<extension type="module" client="site" method="upgrade">
    <name>Modul Menudisplay</name>
    <creationDate>09.02.2025</creationDate>
    <author>Didi</author>
    <authorEmail>infos.wittenberg@online.de</authorEmail>
    <authorUrl>url</authorUrl>
    <copyright>Copyright (C) 2025 Didi"</copyright>
    <license>GPL-2.0-or-later</license>    
    <namespace path="src">Didi\Module\MenuDisplay</namespace>
    <version>1.0.3</version>
    <description>Dieses Modul zeigt die Artikel der Menüpunkte gegliedert nach dem ausgewählten Menü an. (c) Dietrich Wittenberg 2025-03-16</description>
    <files>
        <folder module="mod_menudisplay2">services</folder>
        <folder>services</folder>
        <folder>src</folder>
        <folder>tmpl</folder>
        <file>mod_menudisplay2.xml</file>
    </files>
    <config>
        <fields name="params">

            <fieldset name="basic" label="Allgemeine Einstellungen">

                <field 
                    name="showTitle" 
                    type="radio" 
                    label="Titeltext anzeigen" 
					layout="joomla.form.field.radio.switcher"
                    default="1" 
                    filter="integer"
                    >
                    <option value = "0">JHIDE</option>
                    <option value = "1">JSHOW</option>
                </field>

                <field 
                    name="titleText" 
                    type="text" 
                    default="" 
                    label="Titeltext" 
                    description="Dieser Text wird als Titelüberschrift angezeigt" 
                    showon="showTitle:1"
                />

                <field 
                    name="showCopyright" 
                    type="radio" 
                    label="Copyrighttext anzeigen" 
					layout="joomla.form.field.radio.switcher"
                    default="1" 
                    filter="integer"
                    >
                    <option value = "0">JHIDE</option>
                    <option value = "1">JSHOW</option>
                </field>

                <field 
                    name="copyrightText" 
                    type="text" 
                    default="" 
                    label="Copyrighttext" 
                    description="Copyright Information erscheint am Ende" 
                    showon="showCopyright:1"
                />    

                <field 
                    type="spacer" 
                    hr="true" 
                />
                
                <field 
                    name="menuType" 
                    type="menu" 
                    label="Menü auswählen" 
                    description="Wählen das Menü aus, das angezeigt werden soll." 
                    required="true" 
                />

                <field
                    name="nestingDepth"
                    type="number"
                    default="1"
                    min="1"
                    max="99"
                    step="1"
                    label="Anzahl Untermenüebenen"
                    description="Maximale Anzahl der angezeigten Artikel in einer Kategorie. 0 zeigt alle Artikel an."
                />

                <field
                    name="articleLimit"
                    type="number"
                    default="0"
                    min="0"
                    step="1"
                    label="Anzahl der Artikel je Menü"
                    description="Maximale Anzahl der angezeigten Artikel in einer Kategorie. 0 zeigt alle Artikel an."
                />

                <field
                    name="countTags"
                    type="number"
                    default="0"
                    min="0"
                    step="1"
                    label="Anzahl der Tags minimum"
                    description="Minimale Anzahl an Tags"
                />

                <field 
                    name="access" 
                    type="accesslevel" 
                    default="1" 
                    label="Zugriffsebene der Menüanzeige" 
                    description="Angezeigte Menüeinträge und Artikel ab der Zugriffsebene" 
                />     

                <field
                    name="sortBy"
                    type="list"
                    label="Artikel sortieren"
                    description="Sortiert Artikel"
                    >
                    <option value="none">Keine</option>
                    <option value="rdate">Neueste zuerst</option>
                    <option value="date">Älteste zuerst</option>
                    <option value="alpha">Titel von A bis Z</option>
                    <option value="ralpha">Titel von Z Bis A</option>
                    <option value="alias">Alias von A bis Z</option>
                    <option value="ralias">Alias von Z Bis A</option>
                    <option value="order">Beitragsreihenfolge</option>
                    <option value="rorder">Umgekehrte Beitragsreihenfolge</option>
                </field>

                <field 
                    type="spacer" 
                    hr="true" 
                />
                
                <field 
                    name="marginTop" 
                    type="number" 
                    default="20" 
                    label="Vertikaler Abstand Überschrift [px]" 
                    description="Vertikaler Abstand Menü-Überschrift [px]" 
                />

                <field 
                    name="marginLeft" 
                    type="number" 
                    default="20" 
                    label="Horizontales Einrücken der Textinhalt" 
                    description="Horizontales Einrücken der Textinhalt" 
                />

            </fieldset>
        </fields>
    </config>
    <updateservers>
        <server type="extension" name="Menudisplay2 Module Updates">https://raw.githubusercontent.com/dwittenb/mod_menudisplay2/refs/heads/main/updates.xml</server>
    </updateservers>
</extension>
